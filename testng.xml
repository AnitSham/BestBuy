<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite" parallel="tests" thread-count="5">
	<listeners>
		<listener class-name="utility.Listener"></listener>
	</listeners>

	<test name="TestChromeBrowser">
		<parameter name="url" value="https://www.bestbuy.com/"></parameter>
		<parameter name="browser" value="chrome"></parameter>

		<classes>

			<class name="testcases.TC001_LoginTest" />
			<class name="testcases.TC002_ValidateMenuLinksTest" />
			<class name="testcases.TC006_ValidateBottomLinksTest" />
			<class name="testcases.TC003_AddItemBySearchTest" />
			<class name="testcases.TC004_AddItemByBrandTest" />
			<class name="testcases.TC005_DepartAddItemTest" />


		</classes>
	</test> 

	<test name="TestFirefoxBrowser">
		<parameter name="url" value="https://www.bestbuy.com/"></parameter>

		<parameter name="browser" value="firefox"></parameter>
		<classes>

			<class name="testcases.TC001_LoginTest" />
			<class name="testcases.TC002_ValidateMenuLinksTest" />
			<class name="testcases.TC006_ValidateBottomLinksTest" />
			<class name="testcases.TC003_AddItemBySearchTest" />
			<class name="testcases.TC004_AddItemByBrandTest" />
			<class name="testcases.TC005_DepartAddItemTest" />

		</classes>
	</test>
</suite> 
